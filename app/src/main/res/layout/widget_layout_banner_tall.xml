<?xml version="1.0" encoding="utf-8"?>
<!-- Tall Banner Layout (80x320dp) - Text flows vertically -->
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Static gradient background -->
    <RelativeLayout
        android:id="@+id/widget_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/pastel_gradient"
        android:clickable="true"
        android:focusable="true" />

    <!-- Adaptive background (when wallpaper-based) -->
    <ImageView
        android:id="@+id/adaptive_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:visibility="gone" />

    <!-- Content overlay with padding for tall banner -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="8dp">

        <!-- Custom font bitmap (vertical text) -->
        <ImageView
            android:id="@+id/dayText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="center"
            android:adjustViewBounds="true"
            android:visibility="visible" />

        <!-- Fallback text view (vertical orientation) -->
        <TextView
            android:id="@+id/dayTextFallback"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/default_day"
            android:textColor="#2C3E50"
            android:textSize="14sp"
            android:gravity="center"
            android:fontFamily="@font/dancing_script"
            android:textStyle="italic"
            android:maxLines="10"
            android:ellipsize="end"
            android:autoSizeTextType="uniform"
            android:autoSizeMinTextSize="8sp"
            android:autoSizeMaxTextSize="16sp"
            android:visibility="gone"
            android:rotation="0" />

    </RelativeLayout>
</FrameLayout>
