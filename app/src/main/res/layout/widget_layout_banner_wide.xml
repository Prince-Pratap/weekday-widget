<?xml version="1.0" encoding="utf-8"?>
<!-- Wide Banner Layout (320x80dp) - Text flows horizontally -->
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Static gradient background -->
    <RelativeLayout
        android:id="@+id/widget_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/pastel_gradient"
        android:clickable="true"
        android:focusable="true" />

    <!-- Adaptive background (when wallpaper-based) -->
    <ImageView
        android:id="@+id/adaptive_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:visibility="gone" />

    <!-- Content overlay with padding for wide banner -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="12dp">

        <!-- Custom font bitmap (horizontal text) -->
        <ImageView
            android:id="@+id/dayText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="center"
            android:adjustViewBounds="true"
            android:visibility="visible" />

        <!-- Fallback text view (horizontal orientation) -->
        <TextView
            android:id="@+id/dayTextFallback"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/default_day"
            android:textColor="#2C3E50"
            android:textSize="16sp"
            android:gravity="center"
            android:fontFamily="@font/dancing_script"
            android:textStyle="italic"
            android:maxLines="2"
            android:ellipsize="end"
            android:autoSizeTextType="uniform"
            android:autoSizeMinTextSize="10sp"
            android:autoSizeMaxTextSize="20sp"
            android:visibility="gone" />

    </RelativeLayout>
</FrameLayout>
